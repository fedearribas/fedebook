 <%= form_for(current_user, :url => '/crop_image',:method=>"PUT") do |f| %>
  <div class="row">
    <div class="col-md-8">
      <%= f.cropbox :avatar,:width => 300,:height => 300 %>
    </div>
    <div class="col-md-4">
      <%= f.crop_preview :avatar,:width => 150 %>
    </div>
  </div>
  <div class="modal-footer">
   <%= f.submit 'Crop',:class=>"btn btn-primary" %>           
 </div>            
<% end %>